/* pages/index/index.wxss */
.container{
  height: 100%;
  width: 100%;
}
.banners{
  height: 300rpx;
  width: 100%;
}
.banners swiper-item{
  width: 100%;
}
.banners image{
  width: 100%;
  height: 100%;
}

.navContainer{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-content: center;

}

.navItem{
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
}

.navItem .iconfont{

  background-color: #dd001b;
  margin: 20rpx 0;
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  line-height: 100rpx;
  text-align: center;
  font-size: 55rpx;
  color: #fff;
}

.navItem text{
  font-size: 30rpx;
}

.recommendContainer{
  padding: 20rpx;
}



.recommendScoll{
  display: flex;
  flex-direction: row;
  height: 300rpx;
  
}

.recommendScoll .scrollItem{
  width: 200rpx;
  margin: 10rpx ;
}

.recommendScoll image{
  height: 200rpx;
  width: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text{
  font-size: 30rpx;
  /* 多行文本溢出 省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* 设置多行的行数*/
  
}

.rankingList{
  padding: 20rpx;
}

.swipeItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}

.musicItem{
  display: flex;
  margin-bottom: 20rpx;
}


.rankingSwiper{
  height: 420rpx;
}

.swipeItem{
  width: 96%;
}

.musicItem image {
 height: 100rpx;
 width: 100rpx;
 border-radius: 10rpx;
}

.musicItem .musicOrder {
  height: 100rpx;
  width: 100rpx;

  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
 }

 .musicItem .musicName {

  height: 100rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;

  white-space: nowrap;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
 }

