.container{
    padding: 10rpx 10rpx;
}

.header{
    display: flex;
    flex-direction: row;
    padding: 10rpx 0;
    height: 50rpx;
    line-height: 50rpx;

    /* margin-right: 10rpx; */
    
}

.header .searchContainer{
    position: relative;
    border: solid 1rpx black;
    flex: 1;
    border-radius: 30rpx;
    display: flex;
    align-items: center;
}

.searchInput{
    height: 50rpx;
    margin-left: 50rpx;
    font-size: 30rpx;
}
.cancel{
    width: 100rpx;
    text-align: center;
    font-size: 30rpx;
    color: brown;
}
.seachIcon{
    position: absolute;
    font-size: 30rpx;
    top: 0;
    left: 10rpx;
}
/* 热搜榜 */

.hotContainer .title{
    line-height: 80rpx;
    height: 80rpx;
    border-bottom: solid 1rpx #eee;
    font-size: 30rpx;
}

.hotlist{
    display: flex;
    flex-wrap: wrap;
}

.hotItem{
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
}

.hotItem .name{
    margin-left: 10rpx;
    font-size: 25rpx;
}

.hotItem order{
    margin: 0 10rpx;
}

.hotItem .border{
    font-weight: bolder;
    font-size: 29rpx;
}

.hotItem image{
    height: 20rpx;
    width: 40rpx;
    margin-left: 20rpx;
}

/* 搜索结果区 */

.resultContainer{
    padding: 10rpx;
}

.resultContainer .resultHeader{
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    border-bottom: solid 2rpx rgba(14, 13, 13,0.5);
}

.resultList .resultItem{
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
}

.resultIcon{
    font-size: 25rpx;
}

.resultItem .searchResult{
    flex: 1;
    font-size: 30rpx;
    margin-left: 20rpx;
    border-bottom: solid 2rpx #eee;

    white-space: nowrap;
    max-width: 400rpx;
    text-overflow: ellipsis;
    overflow: hidden;


}


/* 搜索历史 样式 */
.historyContainer{
    position: relative;

    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-bottom: 20rpx 0;
    
    line-height: 50rpx;
    
}

.historyContainer .title{
    height: 50rpx;
    font-size: 25rpx;
}

.hisItem{
    font-size: 26rpx;
    background-color: #ededed;
    padding: 0 30rpx;

    height: 50rpx;
    border-radius: 20rpx;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
}

.historyContainer .delete{
    position:absolute;
    right: 20rpx;
    bottom: 10rpx;

    font-size: 35rpx;
    height: 50rpx;

}

.clear{
    position: absolute;
    z-index: 10;
    right: 30rpx;
    top : 0;
    font-size: 25rpx;
}